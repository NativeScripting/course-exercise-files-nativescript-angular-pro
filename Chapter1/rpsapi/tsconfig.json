{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "checkJs": false,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true, //Remove omce type issue in lodash is fixed
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": "."
    },
    "exclude": [
        "node_modules",
        "platforms",
        "**/*.aot.ts"
    ]
}
